<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:background="@drawable/ic_card"

        android:layout_gravity="center_horizontal"
        android:layout_width="330dp"
        android:layout_height="320dp">
        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/productimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/shirt" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="161dp"
                android:layout_height="match_parent">


                <TextView
android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gothambold"
                    android:textSize="20dp"
                    android:id="@+id/producttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blus shirt" />

                <TextView
                    android:layout_marginTop="10dp"
                   android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gothambold"
                    android:textSize="20dp"
                    android:id="@+id/productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350â‚¹" />



                <TextView
          android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gothambold"
                    android:id="@+id/adddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Itandard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it" />
                <TextView

                 android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gothambold"
                    android:textSize="20dp"
                    android:id="@+id/producid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12365498" />
                <Button
                    android:id="@+id/cancel"
                    android:layout_marginStart="10dp"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:fontFamily="@font/gothambold"/>
            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>