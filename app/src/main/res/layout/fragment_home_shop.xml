<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="5dp"
    tools:context=".homeShop">



    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/gothambold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="28sp"
            android:textColor="#17B978"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gada electronics"/>

        <TextView
            android:fontFamily="@font/gothambold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="170dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop no.13, Ashok Nagar Andheri (East) Mumbai Shop no.13, Ashok Nagar, Andheri (East), Mumbai"/>

        <Button
            android:id="@+id/add_product"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add product +"
            android:textAllCaps="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/clothes_card"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/homeTry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_iwhite_home"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/clothes_card"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/walktry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_white_go_and_try"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:background="@drawable/clothes_card"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_corect"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Your Orders"/>

    <ImageView
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/nodata"
        android:layout_gravity="center_horizontal"
        android:id="@+id/erroimage"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycle"/>


</LinearLayout>