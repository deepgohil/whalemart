<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".walkTry"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:background="@drawable/ic_card"

        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="400dp">
<LinearLayout
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/shopname"
        android:textColor="#17B978"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Gada electronics"
        android:fontFamily="@font/gothambold"
       android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/gothambold"
        android:textColor="#151515"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:text="Police Station, Off, Western Express Highway, Akurli Road, Samata Nagar, Kandivali East, Mumbai, Maharashtra 400101"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:layout_marginTop="13dp"
    android:layout_marginStart="30dp"
    >
    <TextView
        android:id="@+id/openmap"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get direction"
        android:textColor="#0E49B5"
        android:fontFamily="@font/gothambold"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/maps_icon"
        />


</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="@font/gothambold"/>
            <TextView
                android:id="@+id/currentTime"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 to 12:00"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="@font/gothambold"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exclusive code"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/gothambold"/>
 <TextView
     android:id="@+id/orderId"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1631375258"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/gothambold"/>
<Button
    android:id="@+id/confirm"
    android:layout_marginTop="20dp"
    android:layout_width="70dp"
    android:layout_height="40dp"
    android:text="Agree"
    android:textAllCaps="false"
    android:textSize="10dp"
    android:fontFamily="@font/gothambold"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/imgproduct"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/shirt"
            android:padding="30dp"/>

    </LinearLayout>
</LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>