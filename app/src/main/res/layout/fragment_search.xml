<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_freg_background"
    tools:context=".search">



    <LinearLayout

        android:background="@drawable/imageprofileshape"
        android:layout_marginTop="60dp"
        android:id="@+id/mainbox"
        android:layout_width="155dp"
        android:layout_height="290dp"
        android:layout_marginLeft="30dp">
    </LinearLayout>

<TextView
    android:textColor="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/mainbox"
    android:layout_marginStart="50dp"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/gothambold"
    android:textSize="18dp"
    android:text="Clothes"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_below="@+id/mainbox"
        android:layout_marginTop="-125dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/dress"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/shoes"
        app:cardElevation="4dp"
        android:layout_width="155dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="220dp">
        <TextView

            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes"
            android:fontFamily="@font/gothambold"
            android:textSize="18dp"
            />

            <ImageView
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:src="@drawable/shoes"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:background="@drawable/green"
        android:id="@+id/bandhkam"
        android:layout_width="155dp"
        android:layout_height="130dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="220dp">

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessories"
            android:fontFamily="@font/gothambold"
            android:textSize="18dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="100dp"
   android:src="@drawable/acc"
        android:layout_below="@id/bandhkam"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="-75dp"/>

</RelativeLayout>